{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Bundled projects */
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    /* not transpiling with TypeScript: */
    "noEmit": true,
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "incremental": true,
    /* Path Aliases */
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "module": "esnext"
  },
  "include": [
    "./.eslintrc.cjs",
    "./next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.js",
    ".next/types/**/*.ts",
    "../../packages/lib/src/get-zod-defaults.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
